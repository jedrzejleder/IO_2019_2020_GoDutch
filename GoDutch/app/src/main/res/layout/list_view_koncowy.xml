<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/row_item_podsumowanie_osoba"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/row_item_podsumowanie_suma"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/row_item_podsumowanie_osoba"
        android:layout_toRightOf="@+id/row_item_podsumowanie_osoba"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_podsumowanie"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@+id/row_item_podsumowanie_suma"
        android:layout_toRightOf="@+id/row_item_podsumowanie_suma"
        android:text="Skopiuj wiadomość"
        android:textSize="12sp" />

</RelativeLayout>